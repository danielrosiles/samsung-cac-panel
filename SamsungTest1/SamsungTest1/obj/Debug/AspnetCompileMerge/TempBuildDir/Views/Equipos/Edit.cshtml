@model IEnumerable<SamsungTest1.Models.equipo>
@{
    ViewBag.Title = "Edit";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>EDITAR PRODUCTO</h3>
            </div>
        </div>
        <div class="clearfix"></div>

        <form class="form-horizontal form-label-left" action="@Url.Action("Edit", "Equipos")" method="post" enctype="multipart/form-data" id="form">
            <div class="row">

                <div class="col-md-9 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br />

                            <div class="form-group">
                                <label class="control-label col-md-5 col-sm-5 col-xs-12" style="text-align: left;">Modelo: </label>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <input type="text" name="nombre" disabled="disabled" value="@TempData["nombre"]" class="form-control" placeholder="" >
                                    <input type="hidden" name="id" disabled="disabled" value=@TempData["id"] class="form-control" placeholder="">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-5 col-sm-5 col-xs-12" style="text-align: left;">Descripci&oacute;n: </label>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="tab-pane" id="profile"><textarea id="message" required="required" class="form-control" value="" style="resize: none; min-height: 200px;" name="descripcion">@TempData["descripcion"]</textarea></div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-5 col-sm-5 col-xs-12" style="text-align: left;">SKU: </label>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <input type="text" name="sku" disabled="disabled" value="@TempData["sku"]" class="form-control" placeholder="">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-5 col-sm-5 col-xs-12" style="text-align: left;">DISPONIBILIDAD EN STOCK:</label>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <select class="select2_single form-control" name="id_disponibilidad" tabindex="-1">
                                        <option>Selecciona la disponibilidad</option>
                                        @if ((int)TempData["disponibilidad"] == 0)
                                        {
                                            <option value="0" selected>Disponible</option>
                                            <option value="1">No Disponible</option>
                                        }
                                        else
                                        {
                                            <option value="0">Disponible</option>
                                            <option value="1" selected>No Disponible</option>
                                        }

                                        
                                    </select>
                                </div>
                            </div>

                            <div style="border: 2px solid #E6E9ED; margin-bottom: 15px;"></div>

                            <div class="form-group">
                                <label class="control-label col-md-12 col-sm-12 col-xs-12" style="text-align: left;">FOTO DEL PRODUCTO:</label>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <div class="thumbnail">
                                        <div class="image view view-first">
                                        @if ((string)TempData["imagen_1"] != "")
                                        {
                                            <img id="imagen_1" style="width: 100%; display: block;" src="@Url.Content("~/Content/Resources/images/"+@TempData["imagen_1"])" alt="image" />
                                        }
                                        else
                                        {
                                            <img id="imagen_1" style="width: 100%; display: block;" src="" alt="image" />
                                        }

                                            <div class="mask">
                                                <p>Imagen 1</p>
                                                <div class="tools tools-bottom image-upload">
                                                    <label for="imagenUno">
                                                        <a><i class="fa fa-plus-circle"></i></a>
                                                    </label>
                                                    @if ((string)TempData["imagen_1"] != "")
                                                    {
                                                        <input id="imagenUno" type="file" name="imagen_1" value="@Url.Content("~/Content/Resources/images/"+@TempData["imagen_1"])" />
                                                    }
                                                    else
                                                    {
                                                        <input id="imagenUno" type="file" name="imagen_1" value="" />
                                                    }
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <div class="caption">
                                            <p>Imagen 1</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <div class="thumbnail">
                                        <div class="image view view-first">
                                            @if ((string)TempData["imagen_2"] != "")
                                            {
                                                <img id="imagen_2" style="width: 100%; display: block;" src="@Url.Content("~/Content/Resources/images/"+@TempData["imagen_2"])" alt="image" />
                                            }
                                            else
                                            {
                                                <img id="imagen_2" style="width: 100%; display: block;" src="" alt="image" />
                                            }

                                            
                                            <div class="mask">
                                                <p>Imagen 2</p>
                                                <div class="tools tools-bottom image-upload">
                                                    <label for="imagenDos">
                                                        <a><i class="fa fa-plus-circle"></i></a>
                                                    </label>
                                                    @if ((string)TempData["imagen_2"] != "")
                                                    {
                                                        <input id="imagenDos" type="file" name="imagen_2" value="@Url.Content("~/Content/Resources/images/"+@TempData["imagen_2"])" />
                                                    }
                                                    else
                                                    {
                                                        <input id="imagenDos" type="file" name="imagen_2" value="" />
                                                    }
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <div class="caption">
                                            <p>Imagen 2</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <div class="thumbnail">
                                        <div class="image view view-first">
                                            @if ((string)TempData["imagen_3"] != "")
                                            {
                                                <img id="imagen_3" style="width: 100%; display: block;" src="@Url.Content("~/Content/Resources/images/"+@TempData["imagen_3"])" alt="image" />
                                            }
                                            else
                                            {
                                                <img id="imagen_3" style="width: 100%; display: block;" src="" alt="image" />
                                            }
                                            
                                            <div class="mask">
                                                <p>Imagen 3</p>
                                                <div class="tools tools-bottom image-upload">
                                                    <label for="imagenTres">
                                                        <a><i class="fa fa-plus-circle"></i></a>
                                                    </label>
                                                    @if ((string)TempData["imagen_3"] != "")
                                                    {
                                                        <input id="imagenTres" type="file" name="imagen_3" value="@Url.Content("~/Content/Resources/images/"+@TempData["imagen_3"])" />
                                                    }
                                                    else
                                                    {
                                                        <input id="imagenTres" type="file" name="imagen_3" value="@Url.Content("~/Content/Resources/images/"+@TempData["imagen_3"])" />
                                                    }
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <div class="caption">
                                            <p>Imagen 3</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div style="border: 2px solid #E6E9ED; margin-bottom: 15px;"></div>

                            <div class="form-group">
                                <label class="control-label col-md-12 col-sm-12 col-xs-12" style="text-align: left;">VIDEOS DEL PRODUCTO:</label>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <div class="thumbnail">
                                        <div class="image view view-first">
                                            <img id="imagen_4" style="width: 100%; display: block;" src="" alt="video" />
                                            <div class="mask">
                                                <p>VIDEO</p>
                                                <div class="tools tools-bottom image-upload">
                                                    <label for="imagenCuatro">
                                                        <a><i class="fa fa-plus-circle"></i></a>
                                                    </label>
                                                    @if ((string)TempData["video_producto"] != "")
                                                    {
                                                        <input id="imagenCuatro" type="file" name="video_producto" value="@Url.Content("~/Content/Resources/videos/"+@TempData["video_producto"])"/>
                                                    }
                                                    else
                                                    {
                                                        <input id="imagenCuatro" type="file" name="video_producto" />
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="caption">
                                            <p>Nombre del video</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div style="border: 2px solid #E6E9ED; margin-bottom: 15px;"></div>

                            <div class="form-group">
                                <label class="control-label col-md-12 col-sm-12 col-xs-12" style="text-align: left;">3D DEL PRODUCTO:</label>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <div class="thumbnail">
                                        <div class="image view view-first">
                                            <img id="imagen_3d" style="width: 100%; display: block;" src="" alt="3D" />
                                            <div class="mask">
                                                <p>3D</p>
                                                <div class="tools tools-bottom image-upload">
                                                    <label for="TresD">
                                                        <a><i class="fa fa-plus-circle"></i></a>
                                                    </label>

                                                    @if ((string)TempData["C3D_producto"] != "")
                                                    {
                                                        <input id="TresD" type="file" name="modelo_producto" value="@Url.Content("~/Content/Resources/3D/"+@TempData["C3D_producto"])" />
                                                    }
                                                    else
                                                    {
                                                        <input id="TresD" type="file" name="modelo_producto" />
                                                    }
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <div class="caption">
                                            <p>Nombre del 3D</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div style="border: 2px solid #E6E9ED; margin-bottom: 15px;"></div>

                            <div class="form-group">
                                <label class="control-label col-md-12 col-sm-12 col-xs-12" style="text-align: left;">BROCHURE:</label>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <div class="thumbnail">
                                        <div class="image view view-first">
                                            <img id="imagen_brochere" style="width: 100%; display: block;" src="" alt="brochere" />
                                            <div class="mask">
                                                <p>brochere</p>
                                                <div class="tools tools-bottom image-upload">
                                                    <label for="brochere">
                                                        <a><i class="fa fa-plus-circle"></i></a>
                                                    </label>

                                                    @if ((string)TempData["brochure"] != "")
                                                    {
                                                        <input id="brochere" type="file" name="brochere_producto" value="@Url.Content("~/Content/Resources/brochure/"+@TempData["brochure"])" />
                                                    }
                                                    else
                                                    {
                                                        <input id="brochere" type="file" name="brochere_producto" />
                                                    }
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <div class="caption">
                                            <p>brochere</p>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>


                <div class="col-md-3 col-sm-3 col-xs-12">
                    <div class="x_panel">
                        <div class="x_content">

                            <!-- modals -->
                            <!-- Large modal -->
                            <button type="button" class="btn btn-primary col-md-12 col-sm-12 col-xs-12" data-toggle="modal" data-target=".bs-example-modal-lg">Publicar</button>

                            <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">

                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">
                                                <span aria-hidden="true">×</span>
                                            </button>
                                            <h4 class="modal-title" id="myModalLabel">¿Deseas guardar los cambios?</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p>Es importante revisar los cambios ya que esta información se vera reflejada en la la tienda</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                                            <button type="button" class="btn btn-primary" onclick="submit()">Guardar</button>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-3 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Familia del producto</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            <table class="table">
                                <tbody>
