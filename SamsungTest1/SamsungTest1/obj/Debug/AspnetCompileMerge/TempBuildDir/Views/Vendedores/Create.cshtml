@model IEnumerable<SamsungTest1.Models.samsung_vendedores>
@{
    ViewBag.Title = "Create";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>VENDEDORES</h3>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>AGREGAR NUEVO VENDEDOR</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form class="form-horizontal form-label-left" id="form" action="@Url.Action("Create", "Vendedores")" method="post">

                            <div class="form-group">
                                <label class="control-label col-md-5 col-sm-5 col-xs-12" style="text-align: left;">Nombre </label>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <input type="text" name="nombre" class="form-control" placeholder="">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-5 col-sm-5 col-xs-12" style="text-align: left;">Email </label>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <input type="text" name="email" class="form-control" placeholder="">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-5 col-sm-5 col-xs-12" style="text-align: left;">No. Vendedor </label>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <input type="text" name="no_vendedor" class="form-control" placeholder="">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-5 col-sm-5 col-xs-12" style="text-align: left;">Operador </label>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <input type="text" name="operador" class="form-control" placeholder="">
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-md-5 col-sm-5 col-xs-12" style="text-align: left;">Regi&oacute;n</label>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <input type="text" name="region" class="form-control" placeholder="">
                                </div>
                            </div>


                            <div class="ln_solid"></div>

                            <div class="form-group">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <button type="button" id="boton" onclick="this.form.submit()" class="btn btn-success"> <i class="fa fa-floppy-o" aria-hidden="true"></i> REGISTRAR</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>



        </div>
    </div>
</div>

