@model IEnumerable<SamsungTest1.Models.samsung_vendedores>
@{
    ViewBag.Title = "Index";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="x_title">
                <h2>VENDEDORES</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <div class="input-group">
                            <a href="@Url.Action("Create", "Vendedores")"><button type="button" class="btn btn-default btn-sm"><i class="fa fa-user-plus" aria-hidden="true"></i></button></a>
                        </div>
                    </li>
                    <li>
                        <div class="title_left" style="width: 8%;">
                            <div class="col-md-12 col-sm-12 col-xs-12 form-group pull-right top_search">
                                <div class="input-group">
                                    <a href="@Url.Action("Index", "Importer")"><button type="button" class="btn btn-default btn-sm"><i class="fa fa-database" aria-hidden="true"></i> Importar Vendedores </button></a>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="row">
            <!-- Begin Table -->
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nombre</th>
                                    <th>Email</th>
                                    <th>No. Vendedor</th>
                                    <th>Operador</th>
                                    <th>Regi&oacute;n</th>
                                    <th>Fecha de creaci&oacute;n</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id_vendedores</td>
                                        <td>@item.nombre</td>
                                        <td>@item.email</td>
                                        <td>@item.numero</td>
                                        <td>@item.operador</td>
                                        <td>@item.region</td>
                                        <td>@item.fecha_creacion</td>
                                        <td class="text-center"><a href="@Url.Action("Edit", "Vendedores", new { id = @item.Id_vendedores })"><span class="fa fa-edit" style="font-size: 20px;"></span></a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <i class="fa fa-trash" onclick="borrarVendedor(@item.Id_vendedores,'@item.nombre')" style="font-size: 20px;" aria-hidden="true"></i></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- End Table -->
        </div>
    </div>
</div>

