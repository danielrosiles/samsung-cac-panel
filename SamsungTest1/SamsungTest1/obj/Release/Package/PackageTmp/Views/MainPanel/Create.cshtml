@model IEnumerable<SamsungTest1.Models.usuario>
@{
    ViewBag.Title = "Create";
}

<div class="right_col" role="main" style="width: 100%">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>ADMINISTRADORES</h3>
            </div>
        </div>
        <div class="clearfix"></div>


        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>AGREGAR NUEVO ADMINISTRADOR</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form class="form-horizontal form-label-left" id="form" action="@Url.Action("Create", "MainPanel")" method="post">

                            <div class="form-group">
                                <label class="control-label col-md-5 col-sm-5 col-xs-12" style="text-align: left;">Usuario </label>
