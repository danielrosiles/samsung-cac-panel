                                        <th scope="row"><i class="fa fa-dot-circle-o" aria-hidden="true"></i></th>
                                        <td>Galaxy S7</td>
                                    </tr>
                                    <tr>
                                        <th scope="row"><i class="fa fa-dot-circle-o" aria-hidden="true"></i></th>
                                        <td>Galaxy S</td>
                                    </tr>
                                    <tr>
                                        <th scope="row"><i class="fa fa-dot-circle-o" aria-hidden="true"></i></th>
                                        <td>Galaxy S7</td>
                                    </tr>
                                </tbody>
                            </table>

                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th scope="row"><i class="fa fa-plus-circle" aria-hidden="true"></i></th>
                                        <td>Galaxy Note</td>
                                    </tr>
                                </tbody>
                            </table>

                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th scope="row"><i class="fa fa-plus-circle" aria-hidden="true"></i></th>
                                        <td>Galaxy A</td>
                                    </tr>
                                </tbody>
                            </table>

                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th scope="row"><i class="fa fa-plus-circle" aria-hidden="true"></i></th>
                                        <td>Galaxy J</td>
                                    </tr>
