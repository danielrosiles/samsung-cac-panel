                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="input-group" style="width: 60%;">
                                        <input value="" id="password_show" name="contrasenia" type="password" class="form-control">
                                        <span style="width:0%" id="password_show_button" class="input-group-addon"><i class="fa fa-eye-slash" aria-hidden="true"></i></span>
                                    </div>
                                </div>
                            </div>

                            <div class="ln_solid"></div>

                            <div class="form-group">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <button type="button" id="boton" onclick="this.form.submit()" class="btn btn-success"> <i class="fa fa-floppy-o" aria-hidden="true"></i> REGISTRAR</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>



        </div>
    </div>
