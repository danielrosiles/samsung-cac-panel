@model IEnumerable<SamsungTest1.Models.usuario>
@{
    ViewBag.Title = "Index";
}

<!----<h2>Panel de la lista de Clientes</h2>-->

<div class="right_col" role="main" style="width: 100%">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Administradores</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <!-- Aqui van las tablas -->
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <div class="x_title">
                            <h2>ADMINISTRADORES</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <div class="input-group">
                                        <a href="@Url.Action("Create", "MainPanel")">
                                            <button type="button" class="btn btn-default btn-sm">
                                                <i class="fa fa-user-plus" aria-hidden="true"></i>
                                            </button>
                                        </a>
                                    </div>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nombre</th>
                                    <th>Email</th>
                                    <th>Usuario</th>
                                    <th>Contrase&ntilde;a</th>
                                    <th>Fecha de creaci&oacute;n</th>
                                    <th class="table_edit">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id_administrador</td>
                                    <td>@item.nombre @item.apellido</td>
                                    <td>@item.email</td>
                                    <td>@item.usuario1</td>
                                    <td>@item.contrasenia</td>
                                    <td>@item.fecha_creacion</td>
                                    <td class="text-center"><a href="@Url.Action("Edit", "MainPanel", new { id = @item.Id_administrador })"><span class="fa fa-edit" style="font-size: 20px;"></span></a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <i class="fa fa-trash" onclick="borrar(@item.Id_administrador,'@item.nombre @item.apellido')" style="font-size: 20px;" aria-hidden="true"></i></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- Aqui terminan las tablas -->
        </div>
    </div>
</div>




